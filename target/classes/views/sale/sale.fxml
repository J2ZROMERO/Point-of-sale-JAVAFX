<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.j2zromero.pointofsale.controllers.sale.SaleController">
    <children>
        <!-- Input for adding a product -->
        <TextField fx:id="txt_code" layoutX="20.0" layoutY="20.0" prefWidth="200.0" promptText="CÃ³digo del producto" />
        <Button fx:id="btn_add_product" layoutX="230.0" layoutY="20.0" onAction="#search_product" text="Agregar" />

        <!-- Sales Table -->
        <TableView fx:id="sales_table" layoutX="20.0" layoutY="60.0" prefHeight="300.0" prefWidth="600.0">
            <columns>
                <!-- Column for product name -->
                <TableColumn fx:id="product_name_column" prefWidth="150.0" text="Producto" />
            <TableColumn fx:id="product_available_column" prefWidth="150.0" text="Disponible" />
                <!-- Column for sold amount -->
                <TableColumn fx:id="sold_amount_column" prefWidth="100.0" text="Cantidad" />
                <!-- Column for unit price -->
                <TableColumn fx:id="unit_price_column" prefWidth="100.0" text="Precio Unitario" />
                <!-- Column for total sold -->
                <TableColumn fx:id="total_sold_column" prefWidth="100.0" text="Total" />
                <!-- Column for sell type -->
              <!--  <TableColumn fx:id="sell_type_column" prefWidth="150.0" text="Tipo de Venta" /> -->
            </columns>
        </TableView>

        <!-- Button to remove selected row -->
        <Button fx:id="btn_remove_row" layoutX="20.0" layoutY="380.0" onAction="#removeSelectedRow" text="Eliminar Seleccionado" />
      <Button fx:id="btn_add_product1" layoutX="488.0" layoutY="20.0" onAction="#saleProduct" prefHeight="27.0" prefWidth="117.0" text="Vender" />
    </children>
</AnchorPane>
